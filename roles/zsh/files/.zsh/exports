IGNORE_FILES=(.git build view site .undo .cache .local)
function build_ignores {
  s=""
  for f in $IGNORE_FILES
  do
      s+="-E '$f' "
  done
  echo $s
}
export FZF_DEFAULT_COMMAND="fd $(build_ignores) -H --type f"

export BROWSER="chromium"
export EDITOR="nvim"
export READER="zathura"
export TERMINAL="kitty"

export PAGER="less"
export LESS="-iMRS -x2"

export HISTCONTROL=ignoredups
export HISTFILE="$HOME/.zsh_history"
export HISTFILESIZE=100000
export HISTIGNORE="cat:ls:bg:fg:history"
export HISTSIZE=100000
export SAVEHIST=$HISTSIZE
