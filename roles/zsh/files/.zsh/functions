function pa {
  if [ -z "$@" ]; then
    yay -S --noconfirm $(cat "$HOME/.cache/yay/completion.cache" | awk '{print $1}' | fzf --preview 'yay -Si {}')
  else
    yay -S --noconfirm $@
  fi
}

function pr {
  if [ -z "$@" ]; then
    sudo pacman -Rns --noconfirm $(pacman -Qq | fzf --preview 'yay -Si {}')
  else
    sudo pacman -Rns --noconfirm $@
  fi
}
