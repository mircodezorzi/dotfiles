#!/usr/bin/env sh

sudo pacman -Syy

click=$(dunstify --action="replyAction,reply"\
    "Checking for updates" "$(pacman -Qqu | wc -l) updates available"\
    -i $HOME/bin/arch.png \
    -t 15000)

[ $click == 2 ] && sudo pacman -Suu --noconfirm || notify-send "Error" "There has been an error while updating the system."
